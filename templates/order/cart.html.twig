
{% extends 'base.html.twig' %}

{% block title %}Корзина{% endblock %}

{% block body %}

    <table class="table">
        <tr>
            <th>Товар</th>
            <th>Цена</th>
            <th>Кол-во</th>
            <th>Стоимость</th>
        </tr>

        {% for item in order.items %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ item.name }}</td>
                <td>{{ item.price /100 }}</td>
                <td>{{ item.count }}</td>
                <td>{{ item.amount /100 }}</td>
            </tr>
        {% endfor %}

        <tr>
            <th colspan="3">Всего</th>
            <th>{{ order.amount /100 }}</th>
        </tr>

    </table>

{% endblock %}